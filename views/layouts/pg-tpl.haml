                  %tr
                    %td{td_attrs, style: "#{font_attrs}"}
                      = yield
                      = partial :_cta
                %img{src: "#{$img_dev_url}/1x1/", width: "1", height: "20", style: "display: block;"}
                = partial :_newsletter
          %br/
          = partial :_footer


